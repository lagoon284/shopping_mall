<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.example.shopping.deliveryAddr.mapper.DeliveryAddrMapper">
    <insert id="insDeliAddr" parameterType="org.example.shopping.deliveryAddr.dto.DeliveryAddrInsert">
        INSERT INTO DELIVERYADDR(USERID, ADDRALIAS, DELIADDR, DEFDELIADDR)
        VALUES (
                #{userId},
                #{addrAlias},
                #{deliAddr},
                #{defDeliAddr}
               );
    </insert>

    <update id="updAllDefDeliAddr" parameterType="org.example.shopping.deliveryAddr.dto.DeliveryAddrDefUpdate">
        UPDATE DELIVERYADDR
        SET DEFDELIADDR = FALSE
        WHERE USERID = #{userId}
        AND #{defDeliAddr} = TRUE;
    </update>

    <update id="updDefDeliAddr" parameterType="org.example.shopping.deliveryAddr.dto.DeliveryAddrDefUpdate">
        UPDATE DELIVERYADDR
        SET DEFDELIADDR = #{defDeliAddr}
        WHERE DELIADDRNO = #{deliAddrNo};
    </update>

    <select id="getDeliInfo" parameterType="String">
        SELECT    DELIADDRNO
                , USERID
                , ADDRALIAS
                , DELIADDR
                , DEFDELIADDR
        FROM    DELIVERYADDR
        WHERE   USERID = #{userId}
        ORDER BY DELIADDRNO;
    </select>

    <select id="getOneDeliAddr" parameterType="org.example.shopping.deliveryAddr.dto.DeliveryAddrDelete">
        SELECT DELIADDRNO
             , USERID
             , ADDRALIAS
             , DELIADDR
             , DEFDELIADDR
        FROM   DELIVERYADDR
        WHERE  DELIADDRNO = #{deliAddrNo};
    </select>

    <update id="updDeliAddr" parameterType="org.example.shopping.deliveryAddr.dto.DeliveryAddrUpdate">
        UPDATE  DELIVERYADDR
        SET     ADDRALIAS   = #{addrAlias},
                DELIADDR    = #{deliAddr}
        WHERE   DELIADDRNO    = #{deliAddrNo};
    </update>

    <delete id="delDeliAddr" parameterType="Integer">
        DELETE  FROM    DELIVERYADDR
                WHERE   DELIADDRNO  = #{deliAddrNo};
    </delete>

